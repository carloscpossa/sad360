@model SAD360.MVC.ViewModels.QuestaoViewModel

@{
    ViewBag.Title = "Alterar Questão";
}

<h2>Alterar Questão</h2>

<p>
    @ViewBag.questionario
</p>


@using (Html.BeginForm("Edit", "Questao", FormMethod.Post, new { name = "frmCriaQuestao" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.QuestaoId)

        <div class="form-group">
            @Html.LabelFor(model => model.texto, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.texto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.texto, "", new { @class = "text-danger" })
            </div>
        </div>
        
         
        <div class="form-group">
            @Html.Label("Alternativa de Resposta 1", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @if (Model.alternativas.Count() > 0) 
                { 
                    <input type="text" id="txtAlternativa1" name="txtAlternativa1" class="form-control text-box single-line" value="@Model.alternativas.ElementAt(0).texto" />
                }
                else
                {
                    <input type="text" id="txtAlternativa1" name="txtAlternativa1" class="form-control text-box single-line" />
                }
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Alternativa de Resposta 2", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @if (Model.alternativas.Count() > 1)
                {
                    <input type="text" id="txtAlternativa2" name="txtAlternativa2" class="form-control text-box single-line" value="@Model.alternativas.ElementAt(1).texto" />
                }
                else
                {
                    <input type="text" id="txtAlternativa2" name="txtAlternativa2" class="form-control text-box single-line" />
                }
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Alternativa de Resposta 3", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @if (Model.alternativas.Count() > 2)
                {
                    <input type="text" id="txtAlternativa3" name="txtAlternativa3" class="form-control" value="@Model.alternativas.ElementAt(2).texto" />
                }
                else
                {
                    <input type="text" id="txtAlternativa3" name="txtAlternativa3" class="form-control" />
                }
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Alternativa de Resposta 4", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @if (Model.alternativas.Count() > 3)
                {
                    <input type="text" id="txtAlternativa4" name="txtAlternativa4" class="form-control" value="@Model.alternativas.ElementAt(3).texto" />
                }
                else
                {
                    <input type="text" id="txtAlternativa4" name="txtAlternativa4" class="form-control" />
                }
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Alternativa de Resposta 5", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @if (Model.alternativas.Count() > 4)
                {
                    <input type="text" id="txtAlternativa5" name="txtAlternativa5" class="form-control" value="@Model.alternativas.ElementAt(4).texto" />
                }
                else
                {
                    <input type="text" id="txtAlternativa5" name="txtAlternativa5" class="form-control" />
                }
            </div>
        </div>        


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Alterar" class="btn btn-default" id="alteraQuestao" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index", new { id = Model.QuestionarioId})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
