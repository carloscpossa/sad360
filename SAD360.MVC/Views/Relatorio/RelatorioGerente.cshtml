
@{
    ViewBag.Title = "Relatório de Avaliações";
}

<h2>Relatório de Avaliações - Filtros</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Usuário:", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("FuncionarioId", (IEnumerable<SelectListItem>)ViewBag.FuncionarioId)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Período de Resposta das Avaliações:", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <div class="col-md-3">
                    <input type="date" name="dataInicio" class="form-control text-box single-line" />
                </div>
                <div class="col-md-3">
                    <input type="date" name="dataFim" class="form-control text-box single-line" />
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Questionário:", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("QuestionarioId", String.Empty)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Gerar Relatório" class="btn btn-default" />
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


