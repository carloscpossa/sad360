@model SAD360.MVC.ViewModels.QuestionarioViewModel

@{
    ViewBag.Title = "Detalhes do Questionário";
}

<h2>Detalhes do Questionário</h2>

<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>       
    </dl>

    <hr />

    <p>Questões:</p>
    <ol>

        @for (int i = 0; i <= Model.questoes.Count() - 1; i++)
        {
            <li>
                @Model.questoes.ElementAt(i).texto
                <p>Alternativas:</p>
                <ul class="semMarcadores">
                    @for (int j = 0; j <= Model.questoes.ElementAt(i).alternativas.Count() - 1; j++)
                    {
                        <li>@Model.questoes.ElementAt(i).alternativas.ElementAt(j).texto</li>
                    }
                </ul>

            </li>    
        }

    </ol>

</div>
<p>    
    @Html.ActionLink("Voltar", "Index")
</p>
